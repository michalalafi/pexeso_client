<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" id="waiting-borderPane" stylesheets="/css/default.css" xmlns="http://javafx.com/javafx/8" fx:controller="controllers.WaitingController">
    <top>
        <VBox>
            <children>
                <HBox id="waiting-top-session-hbox">
                    <children>
                        <Label id="session-label" text="Session: 0" fx:id="lbSession"/>
                    </children>                        
                </HBox>
                <HBox id="waiting-top-hbox">
                    <children>
                        <Label id="nickname-label-left" fx:id="lbUserName" text="UserName" /> 
                        <Region  prefWidth="50.0" HBox.hgrow="ALWAYS" />
                        <Label id="online-label" text="Online" />
                    </children>
                </HBox>
            </children>
        </VBox>
   </top>
   <bottom>
        <HBox id="lobby-bottom-hbox">
            <children>
                <Label text="Status:" fx:id="lbStatus" id="status-label"/>
            </children>
        </HBox>
   </bottom>
</BorderPane>